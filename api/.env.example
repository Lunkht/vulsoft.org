# Configuration de l'API Vulsoft Auth
# Copiez ce fichier vers .env et modifiez les valeurs

# Port du serveur
PORT=3000

# Environnement (development, production)
NODE_ENV=development

# Clés secrètes JWT (CHANGEZ CES VALEURS EN PRODUCTION !)
JWT_SECRET=vulsoft_super_secret_key_2024_change_me_in_production
JWT_REFRESH_SECRET=vulsoft_refresh_secret_key_2024_change_me_in_production

# Base de données
DB_PATH=./vulsoft_auth.db

# Configuration CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://vulsoft.com

# Configuration email (pour la vérification d'email - optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@vulsoft.com

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Configuration des tokens
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/vulsoft-auth.log