# Configuration pour vulsoft.org - Renommez ce fichier en .env

# Configuration de base
ENVIRONMENT=production
DOMAIN=vulsoft.org
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Base de données
DATABASE_URL=sqlite:///./vulsoft.db
# Pour PostgreSQL en production : DATABASE_URL=postgresql://user:password@localhost/vulsoft_prod

# Clé secrète pour les tokens JWT (CHANGEZ EN PRODUCTION!)
SECRET_KEY="votre_super_cle_secrete_ici_CHANGEZ_MOI"

# Configuration Email pour vulsoft.org
MAIL_USERNAME="contact@vulsoft.org"
MAIL_PASSWORD="votre-mot-de-passe-application"
MAIL_FROM="contact@vulsoft.org"
MAIL_PORT=587
MAIL_SERVER="smtp.gmail.com"  # ou votre serveur SMTP
MAIL_FROM_NAME="Vulsoft Inc."
MAIL_STARTTLS=True

# Clé API OpenAI pour le chatbot
OPENAI_API_KEY="votre_clé_api_openai_ici"

# Clés Stripe (UTILISEZ LES CLÉS LIVE EN PRODUCTION!)
STRIPE_PUBLIC_KEY="pk_live_VOTRE_CLE_PUBLIQUE"
STRIPE_SECRET_KEY="sk_live_VOTRE_CLE_SECRETE"
STRIPE_WEBHOOK_SECRET="whsec_VOTRE_WEBHOOK_SECRET"

# OAuth2 Google (configurez pour vulsoft.org)
GOOGLE_CLIENT_ID="votre_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="votre_google_client_secret"
GOOGLE_REDIRECT_URI="https://vulsoft.org/auth/google/callback"

# OAuth2 GitHub (configurez pour vulsoft.org)
GITHUB_CLIENT_ID="votre_github_client_id"
GITHUB_CLIENT_SECRET="votre_github_client_secret"
GITHUB_REDIRECT_URI="https://vulsoft.org/auth/github/callback"

# 2FA Issuer Name
TWO_FACTOR_ISSUER_NAME="Vulsoft"

# Configuration SSL/HTTPS (optionnel si géré par reverse proxy)
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# Configuration CORS
ALLOWED_ORIGINS="https://vulsoft.org,https://www.vulsoft.org"